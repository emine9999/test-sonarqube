pipeline {
    agent any

    stages {
        stage('Debug') {
            steps {
                script {
                    echo "SONARQUBE_URL: http://128.110.217.203:9000"
                    echo "SONARQUBE_TOKEN: b93391a0b487e82c143aa36c3955f16a6aa655ad"
                    sh 'curl -X GET http://128.110.217.203:9000/api/system/status'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Reference the SonarScanner installed automatically
                    def sonarScanner = tool 'sonarqube-scanner' // Use the exact name from Global Tool Configuration
                    sh """
                        ${sonarScanner}/bin/sonar-scanner \
                            -Dsonar.projectKey=my-js-sample-project \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=http://128.110.217.203:9000 \
                            -Dsonar.login=b93391a0b487e82c143aa36c3955f16a6aa655ad
                    """
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
