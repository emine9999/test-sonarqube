pipeline {
    agent any

    stages {
        stage('SonarQube Analysis') {
            steps {
                script {
                    // Run SonarQube analysis
                    sh """
                        sonar-scanner \
                            -Dsonar.projectKey=my-js-sample-project \
                            -Dsonar.sources=. \
                            -Dsonar.host.url=${SONARQUBE_URL} \
                            -Dsonar.login=${SONARQUBE_TOKEN}
                    """
                }
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up...'
        }
    }
}
